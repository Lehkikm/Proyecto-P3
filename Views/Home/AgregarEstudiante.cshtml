@model AgregarAsignaturaViewModel

<!--Agregar Estudiante-->
<div class="row">
    <div class="col-md-12">
        <h1>Agrega una Nuevo Estudiante</h1>
        <br/>
    </div>
</div>

    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
        
            <!-- <h3 class="col-md-12" style="color: #c4c4c4;">Datos</h3> -->
      
            <!--Nombre-->
            <div class="form-group col-md-12">
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Juan" />
            </div>

            <!--Cédula-->
            <div class="form-group col-md-12">
                <label asp-for="Cedula"></label>
                <input asp-for="Cedula" type="text" class="form-control" placeholder="402-1199667-9" />
            </div>
            
             <!--Fecha de nacimiento-->
            <div class="form-group col-md-12">
                <label asp-for="FechaNacimiento"></label>
                <input asp-for="FechaNacimiento" type="date" class="form-control"/>
            </div>
            
            <!--Teléfono-->
            <div class="form-group col-md-12">
                <label asp-for="Telefono">No. del Aula</label>
                <input asp-for="Telefono" type="text" class="form-control" placeholder="8098045201" />
            </div>

             <!--Dirección-->
            <div class="form-group col-md-12">
                <label asp-for="Direccion">No. del Aula</label>
                <input asp-for="Direccion" type="text" class="form-control"/>
            </div>

            <br/> 
        </div>

    </form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
