@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "¿Contraseña olvidada?";
    Layout = "_LayoutIdentity";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 text-center">
        <h2>@ViewData["Title"]</h2>
        <p>Solo debes escribir tu e-mail</p>
        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="correo@email.com"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block form-control">Enviar</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
